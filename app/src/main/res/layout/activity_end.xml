<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:src="@drawable/result"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="@drawable/kuang"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="您的听力损失程度为："
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_check_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="左耳：25.93(中度) \n右耳：34.52(轻度)"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:text="@string/end"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="@drawable/kuang"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="分析与建议："
            android:textColor="#ee0000"
            android:textSize="20sp"/>

        <ScrollView
            android:layout_width="290dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp">

            <TextView
                android:id="@+id/tv_propose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="重度听力损失的分析与建议：\n\t\t  您在一对一的交流还是可以进行的，但是在日常交流有些困难，需要说话者提高音量讲话，所以会影响你的生活质量。建议您到医院做进一步的检查或者到助听器店做一个咨询。"
                android:textSize="18sp"/>
        </ScrollView>
    </LinearLayout>

    <Button
        android:id="@+id/bt_end"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="25dp"
        android:layout_weight="1"
        android:background="@drawable/selector_button_color"
        android:text="  结  束  "
        android:textColor="@color/button_text_color"
        android:textSize="30sp"
        android:textStyle="bold"/>

</LinearLayout>